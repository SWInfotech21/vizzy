                                    "type": "expression",
                                    "value": "{{$_POST.destination_country}}"
                                  },
                                  {
                                    "name": ":P3",
                                    "type": "expression",
                                    "value": "{{$_POST.visa_application_type}}"
                                  },
                                  {
                                    "name": ":P4",
                                    "type": "expression",
                                    "value": "{{GetTasks[$index].default_task_id}}"
                                  },
                                  {
                                    "name": ":P5",
                                    "type": "expression",
                                    "value": "{{'Default'}}"
                                  },
                                  {
                                    "name": ":P6",
                                    "type": "expression",
                                    "value": "{{'Waiting'}}"
                                  },
                                  {
                                    "name": ":P7",
                                    "type": "expression",
                                    "value": "{{NOW}}"
                                  },
                                  {
                                    "name": ":P8",
                                    "type": "expression",
                                    "value": "{{GetVisaInfo.visa_info_id}}"
                                  }
                                ]
                              }
                            },
                            "meta": [
                              {
                                "name": "identity",
                                "type": "text"
                              },
                              {
                                "name": "affected",
                                "type": "number"
                              }
                            ]
                          }
                        }
                      },
                      "output": true,
                      "meta": [
                        {
                          "name": "$index",
                          "type": "number"
                        },
                        {
                          "name": "$number",
                          "type": "number"
                        },
                        {
                          "name": "$name",
                          "type": "text"
                        },
                        {
                          "name": "$value",
                          "type": "object"
                        },
                        {
                          "name": "default_task_id",
                          "type": "number"
                        },
                        {
                          "name": "visa_type",
                          "type": "text"
                        },
                        {
                          "name": "country",
                          "type": "text"
                        },
                        {
                          "name": "task_name",
                          "type": "text"
                        },
                        {
                          "name": "required",
                          "type": "text"
                        },
                        {
                          "name": "description",
                          "type": "text"
                        }
                      ],
                      "outputType": "array"
                    },
                    {
                      "name": "identity",
                      "module": "auth",
                      "action": "login",
                      "options": {
                        "provider": "security",
                        "username": "{{$_POST.user_email.lowercase()}}",
                        "password": "{{$_POST.user_password.sha256(GetUserId.salt)}}"
                      },
                      "output": false,
                      "meta": []
                    },
                    {
                      "name": "user_id",
                      "module": "core",
                      "action": "setsession",
                      "options": {
                        "value": "{{GetUserId.user_id}}"
                      }
                    }
                  ]
                },
                "else": {
                  "steps": {
                    "name": "Resp",
                    "module": "core",
                    "action": "response",
                    "options": {
                      "status": 400,
                      "data": "Password mismatched with confirm password."
                    }
                  }
                }
              },
              "outputType": "boolean"
            }
          ]
        },
        "catch": {
          "steps": {
            "name": "Resp",
            "module": "core",
            "action": "response",
            "options": {
              "status": 400,
              "data": "An error occurred"
            }
          }
        }
      }
    }
  }
}