                              {
                                "id": "users.user_email",
                                "field": "users.user_email",
                                "type": "string",
                                "operator": "equal",
                                "value": "{{$_POST.user_email.lowercase()}}",
                                "data": {
                                  "table": "users",
                                  "column": "user_email",
                                  "type": "text",
                                  "columnObj": {
