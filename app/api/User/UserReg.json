            },
            {
              "name": "",
              "module": "core",
              "action": "condition",
              "options": {
                "if": "{{($_POST.user_password==$_POST.confirm_pass)}}",
                "then": {
                  "steps": [
                    {
                      "name": "insertUser",
                      "module": "dbupdater",
