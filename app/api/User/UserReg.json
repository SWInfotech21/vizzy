                          ],
                          "table": "users",
                          "query": "INSERT INTO users\n(first_name, last_name, user_email, user_password, salt, created_on, active, ip_address, user_type) VALUES (:P1 /* {{$_POST.first_name}} */, :P2 /* {{$_POST.last_name}} */, :P3 /* {{$_POST.user_email.lowercase()}} */, :P4 /* {{$_POST.user_password.sha256(NOW_UTC)}} */, :P5 /* {{NOW_UTC}} */, :P6 /* {{NOW_UTC}} */, :P7 /* {{1}} */, :P8 /* {{$_SERVER.REMOTE_ADDR}} */, :P9 /* {{'User'}} */)",
