<meta name="ac:route" content="/portal/tasks">
<dmx-serverconnect id="scTaskList" url="/api/Tasks/TaskList" dmx-on:success="varPageName.setValue('Tasks')"></dmx-serverconnect>
<dmx-data-view id="dvTaskList" dmx-bind:data="scTaskList.data.query.data" filter="((task_name.lowercase().contains(SearchItems.value.lowercase())) || (description.lowercase().contains(SearchItems.value.lowercase())) || (your_notes.lowercase().contains(SearchItems.value.lowercase())))"></dmx-data-view>
<dmx-data-detail id="ddTaskList" dmx-bind:data="dvTaskList.data" key="task_list_id"></dmx-data-detail>
<dmx-value id="varStatus" dmx-bind:value="'All'"></dmx-value>

