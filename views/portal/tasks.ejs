<head>
    <title>Task List</title>

    <link rel="stylesheet" href="/assets/vendor/libs/select2/select2.css" />
    <link rel="stylesheet" href="/assets/vendor/libs/bootstrap-select/bootstrap-select.css" />


    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&ampdisplay=swap" rel="stylesheet" />

    <!-- Icons -->
    <link rel="stylesheet" href="/assets/vendor/fonts/fontawesome.css" />
    <link rel="stylesheet" href="/assets/vendor/fonts/tabler-icons.css" />
    <link rel="stylesheet" href="/assets/vendor/fonts/flag-icons.css" />

    <!-- Core CSS -->
    <link rel="stylesheet" href="/assets/vendor/css/rtl/core.css" class="template-customizer-core-css" />
    <link rel="stylesheet" href="/assets/vendor/css/rtl/theme-default.css" class="template-customizer-theme-css" />
    <link rel="stylesheet" href="/assets/css/demo.css" />

    <!-- Vendors CSS -->
    <link rel="stylesheet" href="/assets/vendor/libs/node-waves/node-waves.css" />
    <link rel="stylesheet" href="/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />
    <link rel="stylesheet" href="/assets/vendor/libs/typeahead-js/typeahead.css" />
    <link rel="stylesheet" href="/assets/vendor/libs/apex-charts/apex-charts.css" />
    <link rel="stylesheet" href="/assets/vendor/libs/swiper/swiper.css" />
    <link rel="stylesheet" href="/assets/vendor/libs/datatables-bs5/datatables.bootstrap5.css" />
    <link rel="stylesheet" href="/assets/vendor/libs/datatables-responsive-bs5/responsive.bootstrap5.css" />
    <link rel="stylesheet" href="/assets/vendor/libs/datatables-checkboxes-jquery/datatables.checkboxes.css" />

    <!-- Page CSS -->
    <link rel="stylesheet" href="/assets/vendor/css/pages/cards-advance.css" />

    <!-- Helpers -->
    <script src="/assets/vendor/libs/jquery/jquery.js"></script>
    <script src="/assets/vendor/js/helpers.js"></script>
    <script src="/assets/vendor/js/template-customizer.js"></script>
    <script src="/assets/js/config.js"></script>
</head>

<section class="px-4 mt-3">

    <!-- Task List Table -->
    <section id="Listtable">
        <div class="card">
            <div class="card-header border-bottom">
                <div class="d-flex align-items-center gap-3">
                    <div class="flex-grow-1">
                        <h5 class="card-header">Application Tasks: {{varStatus.value}}<div class="spinner-grow" role="status" dmx-show="scTaskList.state.executing">
                            </div>
                        </h5>
                    </div>
                    <div class="d-flex align-items-center flex-grow-0">
                        <button class="btn btn-label-secondary mx-1" id="TaskAll" dmx-on:click="scTaskList.load({status: ''});varStatus.setValue('All')">All
                        </button>
                        <button class="btn btn-label-primary mx-1" id="TaskWaiting" dmx-on:click="scTaskList.load({status: 'Waiting'});varStatus.setValue('Waiting')">Waiting
                        </button>
                        <button class="btn btn-label-warning mx-1" id="TaskInProgress" dmx-on:click="scTaskList.load({status: 'In-Progress'});varStatus.setValue('In-Progress')">In-Progress
                        </button>
                        <button class="btn btn-label-success mx-1" id="TaskCompleted" dmx-on:click="scTaskList.load({status: 'Completed'});varStatus.setValue('Completed')">Completed
                        </button>
                        <button class="btn add-new btn-primary mx-2" tabindex="0" aria-controls="DataTables_Table_0" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasAddUser" dmx-on:click="TaskForm.reset();ddTaskList.select(0)"><span><i class="ti ti-plus me-0 me-sm-1 ti-xs"></i><span class="d-none d-sm-inline-block">New Task</span></span></button>
                    </div>
                </div>
                <div class="d-flex float-end">
                    <div class="col-12 col-md-12">
                        <input class="form-control" id="SearchItems" placeholder="Search here" />
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table  table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Status</th>
                            <th>Task</th>
                            <th>Required</th>
                            <th>Description</th>
                            <th>Your Notes</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody is="dmx-repeat" dmx-generator="bs5table" dmx-bind:repeat="dvTaskList.data" id="tableRepeat1" key="task_list_id">
                        <tr>
                            <td>{{$index+1}}</td>
                            <td>
                                <span class="badge " text-capitalized dmx-class:bg-label-primary="(status=='Waiting')" dmx-class:bg-label-success="(status=='Completed')" dmx-class:bg-label-warning="(status=='In-Progress')" dmx-class:bg-label-secondary="(status=='Ignore')">{{status}}</span>
                            </td>
                            <td>{{task_name}}</td>
                            <td>{{required}}</td>
                            <td>{{description}}</td>
                            <td>{{your_notes}}</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <a href="#" type="button" class="text-body" aria-label="Edit Tasks" data-bs-original-title="Edit Tasks" tabindex="0" aria-controls="DataTables_Table_0" data-bs-toggle="offcanvas" data-bs-target="#offcanvasAddUser" dmx-on:click="ddTaskList.select(task_list_id)"><i class="mx-2 ti ti-edit ti-sm"></i></a>
                                    <a href="#" data-bs-toggle="tooltip" class="text-body" data-bs-placement="top" aria-label="Delete Tasks" data-bs-original-title="Delete Tasks" dmx-on:click="run({'bootbox.confirm':{title:'Delete A Task',message:'Are you sure to delete the Task?',buttons:{confirm:{label:'Yes',className:'btn-warning'},cancel:{label:'No',className:'btn-secondary'}},swapButtonOrder:true,centerVertical:true,then:{steps:{run:{action:`scDelTask.load({Task_id: Task_id});`,outputType:'text'}}},name:'DeleteTask'}})"><i class="mx-2 ti ti-sm ti-trash"></i></a>
                                    <!-- <div class="dropdown"><a href="javascript:;" class="btn dropdown-toggle hide-arrow text-body p-0" data-bs-toggle="dropdown" aria-expanded="false"><i class="ti ti-dots-vertical ti-sm"></i></a>
                                        <div class="dropdown-menu dropdown-menu-end" style=""><a href="javascript:;" class="dropdown-item">Download</a><a href="app-invoice-edit.html" class="dropdown-item">Edit</a><a href="javascript:;" class="dropdown-item">Duplicate</a>
                                            <div class="dropdown-divider"></div><a href="javascript:;" class="dropdown-item delete-record text-danger">Delete</a>
                                        </div>
                                    </div> -->
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- add new Task -->
            <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasAddUser" aria-labelledby="offcanvasAddUserLabel">
                <div class="offcanvas-header">
                    <h5 id="offcanvasAddUserLabel" class="offcanvas-title">{{ddTaskList.data.task_list_id?'Modify Task':'Add Task'}} <div class="spinner-border" role="status" dmx-show="TaskForm.state.executing"></div>
                    </h5>

                    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body mx-0 flex-grow-0 pt-0 h-100">
                    <form class="add-new-user pt-0" id="TaskForm" method="post" is="dmx-serverconnect-form" dmx-on:unauthorized="notifies1.warning(lastError.response)" dmx-on:forbidden="notifies1.warning(lastError.response)" dmx-on:success="ddTaskList.select(task_list_id.value);notifies1.success('Task Info. Added Successfully');scTaskList.load({});TaskForm.reset(true);scUserInfo.load()" dmx-on:invalid="notifies1.warning(content.TaskForm.lastError.response.data.Resp)" dmx-on:error="notifies1.warning(lastError.response)" action="/api/Tasks/AddEditTasks">
                        <input type="hidden" dmx-bind:value="ddTaskList.data.task_list_id" name="task_list_id" id="task_list_id">
                        <div class="mb-3">
                            <label class="form-label" for="add-task-name">Task Name <strong class="compulsory">*</strong></label>
                            <input type="text" id="add-task-name" class="form-control" placeholder="Task Name" aria-label="Task Name" name="task_name" required="" dmx-bind:value="ddTaskList.data.task_name" />
                        </div>
                        <div class="row">
                            <div class="mb-3 col-12 col-md-6">
                                <label class="form-label" for="add-task-status">Status <strong class="compulsory">*</strong></label>
                                <select type="text" id="add-task-status" class="form-select select2" name="status" required="" dmx-bind:value="ddTaskList.data.status">
                                    <option value="">Select</option>
                                    <option value="Waiting">Waiting</option>
                                    <option value="In-Progress">In-Progress</option>
                                    <option value="Completed">Completed</option>
                                    <option value="Ignore">Ignore</option>
                                </select>
                            </div>
                            <div class="mb-3 col-12 col-md-6">
                                <label class="form-label" for="add-task-required">Required?</label>
                                <select type="text" id="add-task-required" class="form-select select2" name="required" dmx-bind:value="ddTaskList.data.required">
                                    <option value="">Select</option>
                                    <option value="Mandatory">Mandatory</option>
                                    <option value="Advised">Advised</option>
                                    <option value="Optional">Optional</option>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class=" form-label" for="add-task-description">Description</label>
                            <textarea type="text" id="add-task-description" class="form-control" placeholder="Add a description... " aria-label="description" name="description" dmx-bind:value="ddTaskList.data.description" rows="4"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class=" form-label" for="add-task-notes">Your Notes</label>
                            <textarea type="text" id="add-task-notes" class="form-control" placeholder="Your notes" aria-label="Your notes" name="your_notes" dmx-bind:value="ddTaskList.data.your_notes" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary me-sm-3 me-1 data-submit" dmx-bind:disabled="state.executing">{{ddTaskList.data.task_list_id?'Update':'Save'}}</button>
                        <button type="reset" class="btn btn-label-secondary btn-secondary" data-bs-dismiss="offcanvas">Cancel</button>
                    </form>
                </div>
            </div>

        </div>
    </section>
</section>

